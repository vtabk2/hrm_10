<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_department_staff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/img_department4" />

        <ImageView
            android:id="@+id/image_staff_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_department_staff"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/img_staff" />

        <TextView
            android:id="@+id/text_Name_staff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/image_department_staff"
            android:layout_marginLeft="@dimen/text_activity_staff_marginLeft"
            android:layout_marginStart="@dimen/text_activity_staff_marginLeft"
            android:layout_marginTop="@dimen/text_activity_staff_marginTop"
            android:text="@string/nameStaff"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/text_Place_of_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_Name_staff"
            android:layout_alignStart="@+id/text_Name_staff"
            android:layout_below="@+id/text_Name_staff"
            android:layout_marginTop="@dimen/text_activity_staff_marginTop"
            android:text="@string/placeofbirth"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/text_Birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_Place_of_birth"
            android:layout_alignStart="@+id/text_Place_of_birth"
            android:layout_below="@+id/text_Place_of_birth"
            android:layout_marginTop="@dimen/text_activity_staff_marginTop"
            android:text="@string/birthday"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/text_Phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_Birthday"
            android:layout_alignStart="@+id/text_Birthday"
            android:layout_below="@+id/text_Birthday"
            android:layout_marginTop="@dimen/text_activity_staff_marginTop"
            android:text="@string/phone"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/text_Position_in_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_Phone"
            android:layout_alignStart="@+id/text_Phone"
            android:layout_below="@+id/text_Phone"
            android:layout_marginTop="@dimen/text_activity_staff_marginTop"
            android:text="@string/positionincompany"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/text_Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_Position_in_company"
            android:layout_alignStart="@+id/text_Position_in_company"
            android:layout_below="@+id/text_Position_in_company"
            android:layout_marginTop="@dimen/text_activity_staff_marginTop"
            android:text="@string/status"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/edit_name_staff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/text_Place_of_birth"
            android:layout_marginLeft="@dimen/edit_activity_staff_marginLeft"
            android:layout_toEndOf="@+id/text_Position_in_company"
            android:layout_toRightOf="@+id/text_Position_in_company"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edit_place_of_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/edit_name_staff"
            android:layout_alignStart="@+id/edit_name_staff"
            android:layout_below="@+id/edit_name_staff"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/text_Position_in_company"
            android:layout_alignLeft="@+id/edit_place_of_birth"
            android:layout_alignStart="@+id/edit_place_of_birth"
            android:ems="10"
            android:inputType="phone" />

        <Spinner
            android:id="@+id/spinner_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/text_Status"
            android:layout_toEndOf="@+id/text_Position_in_company"
            android:layout_toRightOf="@+id/text_Position_in_company" />

        <TextView
            android:id="@+id/text_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/edit_phone"
            android:layout_alignStart="@+id/edit_phone"
            android:layout_alignTop="@+id/text_Birthday"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
            android:id="@+id/spinner_position_in_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/text_Position_in_company"
            android:layout_toEndOf="@+id/text_Position_in_company"
            android:layout_toRightOf="@+id/text_Position_in_company" />

        <Button
            android:id="@+id/button_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner_status"
            android:layout_centerHorizontal="true"
            android:text="@string/submit" />

        <TextView
            android:id="@+id/text_position_in_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/spinner_position_in_company"
            android:layout_marginLeft="@dimen/text_activity_staff_marginLeft"
            android:layout_toEndOf="@+id/text_Position_in_company"
            android:layout_toRightOf="@+id/text_Position_in_company"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/text_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/spinner_status"
            android:layout_alignStart="@+id/spinner_status"
            android:layout_alignTop="@+id/spinner_status"
            android:layout_marginLeft="@dimen/text_activity_staff_marginLeft"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </RelativeLayout>

</ScrollView>