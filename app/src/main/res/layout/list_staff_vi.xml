<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_staff"
        android:layout_width="@dimen/image_list_staff_vi_width"
        android:layout_height="@dimen/image_list_staff_vi_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/image_list_staff_vi_marginLeft"
        android:layout_marginTop="@dimen/image_list_staff_vi_marginTop" />

    <TextView
        android:id="@+id/text_nameStaff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/image_staff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/text_list_staff_vi_marginLeft"
        android:layout_marginTop="@dimen/text_list_staff_vi_marginTop"
        android:textAppearance="?android:attr/textAppearanceLarge" />
</LinearLayout>